set nocompatible
filetype off

syntax enable
color peachpuff


set directory=$HOME/.vim/swapfiles//
set nowrap
set relativenumber
set number
set colorcolumn=80,120
set tabstop=4
set shiftwidth=4
set expandtab
set list
set listchars=eol:Â¬,tab:>-,trail:~,extends:>,precedes:<

" Keymappings
inoremap <Up> <NOP>
inoremap <Down> <NOP>
inoremap <Left> <NOP>
inoremap <Right> <NOP>
nnoremap ; :
